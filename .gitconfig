[user]
  email = thomas.kienlen@lafourmi-immo.com
  name = "Thomas Kienlen"

[alias]
  st = status -sb
  ci = commit
  co = checkout
  pr = pull --rebase
  dc = diff --cached
  r = remote
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ll = log --stat --abbrev-commit
  amend = commit --amend -C HEAD

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[push]
  default = matching
[github]
  user = kmmndr
[core]
  excludesfile = ~/.gitignore_global
[diff]
  tool = vimdiff
[merge]
  tool = meld
