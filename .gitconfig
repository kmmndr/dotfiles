[user]
  email = kommander@laposte.net
  name = "Thomas Kienlen"

[alias]
  b = branch
  d = checkout develop
  r = remote
  ci = commit
  co = checkout
  dc = diff --cached
  fo = fetch origin
  st = status -sb
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lga = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset %C(bold cyan)%aD%C(reset)' --abbrev-commit
  ll = log --stat --abbrev-commit
  pd = push origin develop
  pm = push origin master:master --tags
  pr = pull --rebase
  rd = rebase origin/develop
  amend = commit --amend -C HEAD
  cleanup = checkout -- .
  backup = "!REM=${1:-'origin'}; CUR=$(git rev-parse --abbrev-ref HEAD); BRANCH=\"backup/${USER}/${CUR}\"; echo -n \"Save branch ${CUR} to ${REM}:${BRANCH} ? [Enter or Ctrl-C to abort] \"; read; git push --force ${REM} $CUR:$BRANCH"

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[push]
  default = matching
[github]
  user = kmmndr
[core]
  excludesfile = ~/.gitignore_global
[diff]
  tool = vimdiff
[merge]
  tool = meld
