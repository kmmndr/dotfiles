#!/bin/bash
set +e # be tolerent

~/.screenlayout/dualscreen.sh &
volumeicon &
parcellite &
xsetroot -solid "#333333"
#nitrogen --restore

## Set startup volume
exec "amixer set Master 20%"
exec "amixer set Master unmute"
exec "amixer set PCM 80%"
exec "amixer set PCM unmute"
exec "aplay ~/yourstartupmusic.wav"

### OSD
dunst &

# tiens toi droit !
{
while true
do
  notify-send -t 5000 -u critical 'Rappel' 'Tiens toi droit !'
  date >> /tmp/toto
  sleep 300
done
}&
